#!/usr/bin/env ruby

$LOAD_PATH.unshift File.join(File.dirname(__FILE__), '..', 'lib')

require 'qt'
require 'gui/application_window'
require 'gui/game_selection_widget'
require 'gui/game_widget'

begin
  application = Qt::Application.new(ARGV)

  ApplicationWindow.new(GameSelectionWidget.new, GameWidget.new).show

  application.exec
rescue Interrupt
end

